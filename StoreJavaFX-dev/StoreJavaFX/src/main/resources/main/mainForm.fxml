<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbMainFormRoot" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ee.ivkhkdev.StoreJavaFX.controller.MainFormController">

    <children>
        <TableView fx:id="tvProductList" prefHeight="426.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="tcId" prefWidth="47.0" text="Id" />
                <TableColumn fx:id="tcName" prefWidth="194.0" text="Название" />
                <TableColumn fx:id="tcCompany" prefWidth="84.0" text="Производители" />
                <TableColumn fx:id="tcPrice" prefWidth="92.0" text="Цена" />
                <TableColumn fx:id="tcQuantity" prefWidth="90.0" text="Количество" />
                <TableColumn fx:id="tcStock" prefWidth="90.0" text="В наличии" />
            </columns>
        </TableView>
        <HBox fx:id="hbEditProduct" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="600.0" spacing="5.0" visible="false">
            <children>
                <Button onAction="#showSelectedProductForm" text="Подробнее">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
            </children>
        </HBox>
    </children>
</VBox>
