<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300.0" prefWidth="300.0" alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ee.ivkhkdev.StoreJavaFX.controller.edits.EditCompanyFormController">

    <children>
        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Редактирование производителя" />

        <!-- Поле ID (скрытое или read-only) -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label alignment="TOP_LEFT" contentDisplay="CENTER" text="ID:" />
                <TextField fx:id="tfId" alignment="CENTER_RIGHT" editable="false" prefHeight="25.0" prefWidth="150.0" />
            </children>
        </HBox>

        <!-- Название -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label text="Название:" />
                <TextField fx:id="tfName" alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="150.0" />
            </children>
        </HBox>

        <!-- Контакт -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label text="Контакт:" />
                <TextField fx:id="tfContact" prefHeight="25.0" prefWidth="150.0" />
            </children>
        </HBox>

        <!-- Кнопки -->
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Button onAction="#saveCompany" text="Сохранить" />
                <Button onAction="#goBack" text="Назад" />
            </children>
        </HBox>
    </children>
</VBox>
