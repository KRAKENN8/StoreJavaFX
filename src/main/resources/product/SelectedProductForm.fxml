<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400" prefWidth="700" alignment="CENTER" spacing="10" style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ee.ivkhkdev.StoreJavaFX.controller.selects.SelectedProductFormController">

    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Информация о товаре" />

    <ImageView fx:id="productImageView" fitWidth="200" preserveRatio="true" />

    <Label style="-fx-font-weight: bold;" text="Название:" />
    <Label fx:id="nameLabel" />

    <Label style="-fx-font-weight: bold;" text="Производители:" />
    <Label fx:id="companyLabel" />

    <Label style="-fx-font-weight: bold;" text="Цена:" />
    <Label fx:id="priceLabel" />

    <Label style="-fx-font-weight: bold;" text="В наличии:" />
    <Label fx:id="quantityLabel" />

    <Label style="-fx-font-weight: bold;" text="Поступило на склад:" />
    <Label fx:id="stockLabel" />

    <HBox alignment="CENTER" prefHeight="25.0" prefWidth="200.0" spacing="5.0">
        <children>
            <Button fx:id="buyProductButton" onAction="#handleBuyProduct" text="Купить" />
            <Button fx:id="closeButton" onAction="#handleClose" text="Закрыть" />
        </children>
    </HBox>
</VBox>
